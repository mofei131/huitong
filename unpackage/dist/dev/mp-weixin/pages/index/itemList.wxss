
.itemList{
	padding-top: 20rpx;
}
.listItem{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 720rpx;
	margin: auto;
	margin-bottom: 20rpx;
}
.listLeft{
	width: 490rpx;
}
.listLeft view:nth-child(1){
	color: #51565D;
	font-size: 28rpx;
	font-family: PingFangSC-Medium, PingFang SC;
	line-height: 40px;
	font-weight: 500;
}
.listLeft view:nth-child(2){
	color: #51565D;
	font-size: 24rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	line-height: 33rpx;
}
.listRight{
	width: 158rpx;
	/* margin-left: 32rpx; */
	margin: auto;
}
.listRight view{
	width: 158rpx;
	height: 50rpx;
	background: #1890FF;
	border-radius: 25rpx;
	color: #fff;
	font-size: 24rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	line-height: 53rpx;
	text-align: center;
	display: block;
	margin-top: 60rpx;
}

